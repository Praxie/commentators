= div_for(comment) do
  .row
    .thumb-image.col-md-4.col-xs-4
      = link_to(image_tag(comment.commentable.image.url(:square)), image_path(comment.commentable))
    .single-comment.no-left-padding.col-md-8.col-xs-8
      .bubble-comment.bubble-comment-user
        .content
          = comment.content
      .voted
        .rating
          = comment.rating