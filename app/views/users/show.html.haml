%h1
  = image_tag(@user.avatar_url, class: 'img-circle')
  = @user.username
  = @user.karma
.comments
  - @user.comments.each do |comment|
    .single-comment
      .image-id
        = link_to("##{comment.image.id}", image_path(comment.image)) 
      .bubble-comment
        .content
          = comment.content
      .voted
        .rating
          = comment.rating