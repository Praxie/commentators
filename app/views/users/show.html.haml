= content_for(:title, "Пользователь #{@user.username} | Комментаторы")
- if user_signed_in?
  - if current_user == @user
    %li
      = link_to 'Редактировать профиль', edit_user_registration_path
.user-page
  #user-profile-info
    %table.table.user-show
      %tr
        %td.single-user
          = image_tag(@user.avatar_url, class: 'img-circle')
          = @user.username
        %td
          = @user.karma
  #user-comments
    = render partial: 'comments/user_comments', collection: @comments, as: :comment
  #with-button
    = will_paginate(@comments)
  - if @comments.next_page
