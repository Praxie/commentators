.sidebar
  #profile
    %nav.navigation
      - if user_signed_in?
        %ul
          - if current_user.admin?
            %li= link_to '+', new_image_path
          /
            %li= link_to '', users_path, class: "fa fa-group", title: "Население"
          %li= link_to image_tag(current_user.avatar_url, class: 'img-circle'), user_path(current_user), title: "Профиль"
          %li= link_to '', destroy_user_session_path, method: :delete, class: "fa fa-sign-out", title: "Выход"
      - else
        %ul
          %li= link_to "Войти", user_omniauth_authorize_path(:vkontakte)
          %li= link_to '', users_path, class: "fa fa-group", title: "Население"
          %li= link_to 'Рега', new_user_registration_path  
  #group
    #vk_groups
    :javascript
      VK.Widgets.Group("vk_groups", {mode: 1, width: "313", height: "400", color1: 'FFFFFF', color2: '2B587A', color3: '5B7FA6'}, 44170325);
  #wall
    -if params[:controller] == 'images' && params[:action] == 'show'
      #vk_comments
      :javascript
        VK.Widgets.Comments("vk_comments", {limit: 10, width: "313", attach: "graffiti,photo,video,audio"});
    -else
      #vk_comments
      :javascript
        VK.Widgets.Comments("vk_comments", {limit: 10, width: "313", attach: "graffiti,photo,video,audio"}, 33);