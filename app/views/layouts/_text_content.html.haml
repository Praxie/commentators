.news-content-wrapper
  .news-content
    - unless action_name == 'show'
      - if simple_format(post.content).length > 350
        .spoiler-wrapper
          .spoiler.folded.fa.fa-chevron-circle-down
          .teaser
            = simple_format(post.content)
      - else 
        = simple_format(post.content)
    - else 
      = simple_format(post.content)