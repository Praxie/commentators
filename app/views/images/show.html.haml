= content_for :matashare do
  %meta{content: "#{@top_comment.content} © #{@top_comment.user.username}", property: "og:title"}/
  %meta{content: "#{@image.image.url(:thumb)}", property: "og:image"}/
  - if @image.comments.size == 1
    %meta{content: "", property: "og:description"}/
  - if @image.comments.size == 2
    %meta{content: "2. #{@image.comments.order("rating desc, created_at asc").second.content} © #{@image.comments.order("rating desc, created_at asc").second.user.username}", property: "og:description"}/
  - if @image.comments.size > 2
    %meta{content: "2. #{@image.comments.order("rating desc, created_at asc").second.content} 3. #{@image.comments.order("rating desc, created_at asc").third.content}", property: "og:description"}/
= content_for(:title, "Комментатор ##{@image.id} | Комментаторы")
%article.commentator
  .img-header
    %h4.created_at_image
      = @image.created_at.strftime("%d/%m/%Y")
    %h4.title
      Добавил: 
      - if @image.user != nil
        = link_to @image.user.username, user_path(@image.user)
      - else
        Повелитель удаленных душ
      - if user_signed_in?
        - if current_user.admin?
          - unless @image.godnota?
            %i.godnota.dniwe.fa.fa-thumbs-o-up{ data: {:image_id => @image.id}}
          = link_to 'Редактировать', edit_image_path(@image)
          = link_to 'Фтопку', image_path(@image), method: :delete
    = image_tag(@image.image.url(:medium), class: "resize")
  - if @image.comments.any?
    .top-comment
      %h1
        = @top_comment.content
      %h4
        = link_to(@top_comment.user.username, user_path(@top_comment.user))
    %h4.share
      = render 'layouts/share'
    - if user_signed_in?
      = render 'add_comment'
    - else
      %h3 Присоединяйся!
    .sort_comments
      = 'Сортировать по'
      - if params[:sort_by] == 'popular'
        = link_to "новизне", :sort_by => "recent"
      - else
        = link_to "популярности", :sort_by => "popular"
    #comments
      = render @comments 
    #with-button
      = will_paginate(@comments)
    - if @comments.next_page
      #load_more_comments.btn.btn-lg.load-more Еще
  - else
    .top-comment
      %h1
        Комметариев пока нет
    %h4.share
      = render 'layouts/share'
    - if user_signed_in?
      = render 'add_comment'
    #comments
%h1
