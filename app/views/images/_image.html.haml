.image
  .category
    = link_to "", images_path
    .icon.picture-icon
      = render "icons/picture.svg"
  = render 'layouts/post_vote_block', post: image
  = link_to(image_tag(image.image.url(:medium), alt: "#{top_comment}", class: "resize"), image_path(image))
  - if image.comments.any?
    .top-comment
      %h1
        = top_comment
      %h4
        = link_to(image.comments.order("rating DESC, created_at ASC").first.user.username, user_path(image.comments.order("rating DESC, created_at ASC").first.user), rel: 'author')
  - else
    .top-comment
      %h1
        Комментариев пока нет
  = render 'layouts/image_footer', post: image